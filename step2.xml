<camel>

    <route id="process-order">
        <from uri="platform-http:/order"/>
        <choice>
            <when>
                <jsonpath>$[?(@.order_total &lt; 100)]</jsonpath>
                <to uri="file:tmp/standard?fileName=last-order.json" />
            </when>
            <otherwise>
                <to uri="file:tmp/expedited?fileName=last-order.json" />
            </otherwise>
        </choice>
        <log message="${body}"/>
    </route>

</camel>
